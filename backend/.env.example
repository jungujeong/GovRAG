# Server/Concurrency
APP_PORT=8000
WORKERS=4
REQUEST_TIMEOUT_S=15
MAX_QUEUE=256

# Document/Index
DOC_DIR=./data/documents
WHOOSH_DIR=./data/index
CHROMA_DIR=./data/chroma
CHUNK_TOKENS=2048
CHUNK_OVERLAP=256
TABLE_AS_SEPARATE=true
FOOTNOTE_BACKLINK=true

# Embedding
PRIMARY_EMBED=BAAI/bge-m3
SECONDARY_EMBED=nlpai-lab/KoE5
FALLBACK_EMBED=snunlp/KR-SBERT-Medium-extended
EMBED_BATCH=16

# Hybrid Search Weights
W_BM25=0.4
W_VECTOR=0.4
W_RERANK=0.2
RRF_K=60
TOPK_BM25=30
TOPK_VECTOR=30
TOPK_RERANK=10

# Reranker
RERANKER_ID=jinaai/jina-reranker-v2-base-multilingual
RERANK_USE_ONNX=true

# Generation (LLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:4b
GEN_TEMPERATURE=0.0
GEN_TOP_P=1.0
GEN_MAX_TOKENS=1024

# Accuracy Thresholds
EVIDENCE_JACCARD=0.55
CITATION_SENT_SIM=0.9
CITATION_SPAN_IOU=0.5
CONFIDENCE_MIN=0.7

# Security/Session
SESSION_TIMEOUT_S=3600
AUDIT_LOG_RETENTION_D=90
PII_MASKING=true
